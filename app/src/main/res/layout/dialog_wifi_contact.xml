<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:skin="http://schemas.android.com/android/skin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/defaultBlueColor"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/diaglog_title_paddingtop"
        android:paddingTop="@dimen/diaglog_title_paddingtop"
        android:text="wifi 001 密码为qqqqqq"
        android:textColor="@color/text_default_color"
        android:textSize="@dimen/default_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0.5dp"
        android:layout_marginLeft="0.5dp"
        android:layout_marginRight="0.5dp"
        android:background="@color/black"
        android:orientation="vertical"
        android:paddingBottom="@dimen/diaglog_paddingtop"
        android:paddingLeft="@dimen/diaglog_paddingleft"
        android:paddingRight="@dimen/diaglog_paddingleft"
        android:paddingTop="@dimen/diaglog_paddingtop"
        skin:enable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="信号强度"
            android:textColor="@color/defaultBlueColor"
            android:textSize="@dimen/default_text_size" />

        <TextView
            android:id="@+id/scan_strength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:text="@string/scan_strength"
            android:textColor="@color/text_default_color"
            android:textSize="@dimen/default_text_size"
            skin:enable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/diaglog_paddingtop"
            android:text="安全性"
            android:textColor="@color/defaultBlueColor"
            android:textSize="@dimen/default_text_size" />

        <TextView
            android:id="@+id/security"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:text="@string/wlan_security"
            android:textColor="@color/text_default_color"
            android:textSize="@dimen/default_text_size"
            skin:enable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/diaglog_paddingtop"
            android:text="密码"
            android:textColor="@color/defaultBlueColor"
            android:textSize="@dimen/default_text_size" />

        <EditText
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_round_blue"
            android:inputType="textPassword"
            android:padding="3dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            skin:enable="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="@dimen/diaglog_button_paddingtop"
                android:paddingTop="@dimen/diaglog_button_paddingtop"
                android:text="取消"
                android:background="@drawable/selector_bg_wifi_button"
                android:textColor="@color/text_default_color"
                android:textSize="@dimen/default_text_size"
                skin:enable="true" />

            <View
                android:layout_width="@dimen/default_line_width"
                android:layout_height="match_parent"
                android:background="@color/defaultBlueColor" />

            <TextView
                android:id="@+id/ok"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="@dimen/diaglog_button_paddingtop"
                android:paddingTop="@dimen/diaglog_button_paddingtop"
                android:text="连接"
                android:textColor="@color/text_default_color"
                android:textSize="@dimen/default_text_size"
                android:background="@drawable/selector_bg_wifi_button"
                skin:enable="true" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>