<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/alert_dialog_shape"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/alert_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:gravity="center"
        android:text="出错了"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/alert_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="您好，请设置摇一摇主标题！"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="15dp"
        android:background="@color/LineGrayColor"
        android:text="_"
        android:textColor="@color/LineGrayColor" />

    <TextView
        android:id="@+id/tv_roger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="知道了"
        android:textColor="@color/defaultBlueColor"
        android:textSize="18sp" />

</LinearLayout>